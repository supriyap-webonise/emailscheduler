DELIMITER $$
  CREATE EVENT email_scheduler
    ON SCHEDULE AT CURRENT_TIMESTAMP + INTERVAL 1 MINUTE
    DO
      BEGIN
      SELECT * FROM tbl_email_schedule WHERE e_date < now() AND is_active='1' AND e_sent=0;
        DELIMITER $$
          CREATE TRIGGER scheduleemail
          AFTER SELECT ON tbl_email_schedule
          FOR EACH ROW
          BEGIN
          DECLARE result INT;
          SET result = sys_exec('/home/projects/php/app2014/scheduler/process_email.php');
          END$$
        DELIMITER ;
      END;
  $$;


  php /home/projects/php/app2014/scheduler/process_email.php


